<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HardWork Seguros - @ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="@Url.Content("/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("/css/modern-business.css")" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="@Url.Content("/css/social.css")" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" id="navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- You'll want to use a responsive image option so this logo looks good on devices - I recommend using something like retina.js (do a quick Google search for it and you'll find it) -->
                @*@Html.ActionLink("HardWork Seguros", "Index", new { controller = "Home" }, new { @class = "navbar-brand", @id = "navbar-brand" })*@
                <div class="navbar-brand"><a href="@Url.Action("Index", "Home")"><img src="~/hw-seguros-semfundo.fw.png" /></a> </div>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Quem Somos", "Index", new { controller = "QuemSomos" }, new { @id = "about" })
                    </li>
                    <li>
                        @Html.ActionLink("Serviços", "Index", new { controller = "Servicos" }, new { @id = "services" })
                    </li>
                    <li>
                        @Html.ActionLink("Cotações", "Index", new { controller = "Cotacoes" }, new { @id = "cotacoes" })
                    </li>
                    <li>
                        @Html.ActionLink("Contato", "Index", new { controller = "Contato" }, new { @id = "contact" })
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    @RenderBody()

    <div class="container">

        <hr>

        <footer>
            <div class="social">
                <ul>
                    <li><a href="#"><div class="facebook disabled"></div></a></li>
                    <li><a href="#"><div class="twitter disabled"></div></a></li>
                    <li><a href="#"><div class="google disabled"></div></a></li>
                    <li><a href="https://www.instagram.com/hardworkseguros/" target="_blank"><div class="instagram"></div></a></li>
                </ul>
            </div>

            <div class="row" style="text-align:center; padding-top: 100px;">
                <div class="col-lg-12">
                    <p>Website desenvolvido por <strong><a href="#" style="text-decoration: none;">Devepulus</a></strong> 2019 &copy; Todos os direitos reservados.</p>
                </div>
            </div>

        </footer>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>

    <script>
        var $doc = $('html, body');
        $('.scrollSuave').click(function () {
            $doc.animate({
                scrollTop: $($.attr(this, 'href')).offset().top
            }, 500);
            return false;
        });
    </script>

    <script src="@Url.Content("/js/bootstrap.js")"></script>
    <script src="@Url.Content("/js/essencial.js")"></script>
</body>
</html>